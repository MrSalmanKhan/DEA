<div class="row">
    <div class="col-md-4">
        <div class="info-box">
            <span class="info-box-icon bg-aqua"><i class="fa fa-envelope-o"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Messages</span>
                <span class="info-box-number"> @ViewBag.TotalMessages</span>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="info-box">
            <span class="info-box-icon bg-green"><i class="fa fa-bullhorn"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Notifications</span>
                <span class="info-box-number">@ViewBag.TotalNotifications</span>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="info-box">
            <span class="info-box-icon bg-yellow"><i class="ion ion-ios-people-outline"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Total Students</span>
                <span class="info-box-number">@ViewBag.TotalUsers</span>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-body">
                <div class="tab-pane" id="timeline">
                    <ul class="timeline timeline-inverse">
@foreach (var item in ViewBag.allPrincipalMessages)
{

                        <li class="time-label">
                            <span class="bg-red">
                                @item.date
                            </span>
                        </li>

                        <li>
                            <i class="fa fa-comments bg-yellow"></i>
                            <div class="timeline-item">
                               
                                <h3 class="timeline-header"><a href="#">@item.Name</a> sent you a message</h3>
                                <div class="timeline-body">
                                    @item.message
                                </div>
                                <div class="timeline-footer">
                                    <a href="~/AspNetMessages/Inbox" class="btn btn-warning btn-flat btn-xs">Reply</a>
                                </div>
                            </div>
                        </li>
}
                        <li>
                            <i class="fa fa-clock-o bg-gray"></i>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header">
                <i class="ion ion-clipboard"></i>
                <h3 class="box-title">To Do List</h3>
                <div class="box-tools pull-right">
                    <ul class="pagination pagination-sm inline">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <div class="box-body" style="overflow:auto; width:100%;height:250px;">
                <ul class="todo-list">
                    @foreach (var item in ViewBag.ClassName)
                    {

                        <li>
                            <a href="~/AspNetSubject_HomeWork/Index?HomeWorkId=@item.HomeWorkId">
                                <span class="handle">
                                    <i class="fa fa-ellipsis-v"></i>
                                    <i class="fa fa-ellipsis-v"></i>
                                </span>

                                <span class="text" title="Click to go for Approve Diary">
                                    Approve Diary for @item.Classname
                                </span>
                                @if (item.isToDay == true)
                                {
                                    <small class="label label-success" title="@item.date"><i class="fa fa-clock-o"></i> Today</small>

                                }
                                else
                                {
                                    <small class="label label-danger"title="@item.date"><i class="fa fa-clock-o"></i> @item.Actualdate</small>

                                }
                                <div class="tools">
                                    <i class="fa fa-edit"></i>
                                    <i class="fa fa-trash-o"></i>
                                </div>
                            </a>
                        </li>
                    }

                </ul>
            </div>
            <div class="box-footer clearfix no-border">
                <button type="button" title="Not Functional" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Add item</button>
            </div>
        </div>
@using (Html.BeginForm("SendEmailViaPrincipalDashboard", "AspNetMessages", FormMethod.Post))
{
    @Html.AntiForgeryToken()
        <div class="box box-info">
            <div class="box-header">
                <i class="fa fa-envelope"></i>
                <h3 class="box-title">Quick Email</h3>
                <div class="pull-right box-tools">
                    <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <form action="#" method="post">
                    <div class="form-group">
                        <input type="email" class="form-control" name="emailto" required placeholder="Email to:">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="subject" required placeholder="Subject">
                    </div>
                    <div>
                        <textarea class="textarea" name="message" placeholder="Message" required style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                    </div>
                </form>
            </div>
            <div class="box-footer clearfix">
                <button type="submit" class="pull-right btn btn-default" >
                    Send
                    <i class="fa fa-arrow-circle-right"></i>
                </button>
            </div>
        </div>
}
    </div>
</div>