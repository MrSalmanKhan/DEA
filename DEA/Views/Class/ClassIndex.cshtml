@model IEnumerable<DEA.Models.Class>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminSidebar.cshtml";
}
<div class="col-md-12">
    <h2>Index</h2>

    <p>
    </p>    @Html.ActionLink("Create New", "CreateClass")

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Class1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Class1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Section)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditClass", new { id = item.ClassID }) |
                    @Html.ActionLink("Details", "ClassDetails", new { id = item.ClassID }) |
                    @Html.ActionLink("Delete", "DeleteClass", new { id = item.ClassID })
                </td>
            </tr>
        }

    </table>
</div>